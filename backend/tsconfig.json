{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@/config/*": ["./src/config/*"],
        "@/models/*": ["./src/models/*"],
        "@/routes/*": ["./src/routes/*"],
        "@/controllers/*": ["./src/controllers/*"],
        "@/middleware/*": ["./src/middleware/*"],
        "@/utils/*": ["./src/utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
